/**index.wxss**/

page {
    background: #f3f4f6;
}

.main {
    display: flex;
    display: -webkit-flex;
    justify-content: flex-start;
    width: 273%;
}

.main-con {
    width: 615rpx;
    display: flex;
    background: #fff;
    border-radius: 20rpx;
    flex-shrink: 0;
    flex-direction: column;
    align-items: center;
    margin-right: 32rpx;
    padding-bottom: 250rpx;
}

.main-con:first-child {
    margin-left: 70rpx;
}

.main-con:last-child {
    margin-right: 70rpx;
}

.main-con image {
    width: 240rpx;
    height: 228rpx;
    margin-top: 160rpx;
}

.main-con .text {
    color: #1b88ee;
    margin-top: 20rpx;
}

.moreBook {
    width: 336rpx;
    height: 102rpx;
    border-radius: 20rpx;
    background: #1b88ee;
    line-height: 102rpx;
    color: #fff;
    margin-top: 200rpx;
    text-align: center;
}
